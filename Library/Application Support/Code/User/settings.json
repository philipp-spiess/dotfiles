// Place your settings in this file to overwrite the default settings
{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.fontFamily": "Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
  // Flow Support
  "flow.useNPMPackagedFlow": true,
  // Newline
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Excluded for Search
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/dist": true,
    "web_test/_build": true,
    "**/*.gif": true,
    "**/*.png": true,
    "build/*": true
  },
  "editor.rulers": [72, 80, 100],
  "window.zoomLevel": 0,
  "cSpell.userWords": [
    "Emscripten",
    "FREETEXT",
    "KEYCODE",
    "PSPDF",
    "Truthy",
    "Uncomment",
    "Unmount",
    "WASM",
    "affine",
    "backend",
    "hashids",
    "philipp",
    "polyfilled",
    "pspdfkit",
    "rasterized",
    "recomponent",
    "rect",
    "rects"
  ],
  "flow.runOnEdit": true,
  "files.associations": {
    "*.tmpl": "ejs"
  },
  "atomKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "window.nativeTabs": false,
  "flow.useLSP": true,
  "javascript.validate.enable": false,

  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "explorer.openEditors.visible": 0,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "workbench.editor.showIcons": false,
  "workbench.statusBar.visible": false,

  "vscode_custom_css.imports": [
    "file:///Users/philipp/dev/dotfiles/vscode-custom-css.css"
  ],
  "vscode_custom_css.policy": true,
  "vscode_custom_css.statusbar": true,
  "cSpell.showStatus": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "workbench.startupEditor": "welcomePage",
  "materialTheme.autoApplyIcons": false,
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#80CBC4",
    "list.activeSelectionForeground": "#80CBC4",
    "list.inactiveSelectionForeground": "#80CBC4",
    "list.highlightForeground": "#80CBC4",
    "scrollbarSlider.activeBackground": "#80CBC450",
    "editorSuggestWidget.highlightForeground": "#80CBC4",
    "textLink.foreground": "#80CBC4",
    "progressBar.background": "#80CBC4",
    "pickerGroup.foreground": "#80CBC4",
    "tab.activeBorder": "#80CBC4",
    "notificationLink.foreground": "#80CBC4",
    "editorWidget.resizeBorder": "#80CBC4",
    "editorWidget.border": "#80CBC4",
    "settings.modifiedItemIndicator": "#80CBC4",
    "settings.modifiedItemForeground": "#80CBC4",
    "settings.headerForeground": "#80CBC4",
    "panelTitle.activeBorder": "#80CBC4",
    "breadcrumb.activeSelectionForeground": "#80CBC4",
    "menu.selectionForeground": "#80CBC4",
    "menubar.selectionForeground": "#80CBC4"
  },
  "materialTheme.accent": "Teal"
}
