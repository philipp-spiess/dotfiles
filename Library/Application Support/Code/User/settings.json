// Place your settings in this file to overwrite the default settings
{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.fontFamily": "Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
  // Newline
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Excluded for Search
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/dist": true,
    "web_test/_build": true,
    "**/*.gif": true,
    "**/*.png": true,
    "build/*": true
  },
  "editor.rulers": [72, 80, 100, 120],
  "cSpell.userWords": [
    "Emscripten",
    "FREETEXT",
    "KEYCODE",
    "Substate",
    "Truthy",
    "Uncomment",
    "Unmount",
    "WASM",
    "affine",
    "backend",
    "frontmatter",
    "hashids",
    "linaria",
    "philipp",
    "polyfilled",
    "rasterized",
    "recomponent",
    "rect",
    "rects"
  ],
  "files.associations": {
    "*.tmpl": "ejs"
  },
  "atomKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "window.nativeTabs": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "explorer.openEditors.visible": 0,
  "workbench.iconTheme": null,
  "workbench.editor.showIcons": false,
  "vscode_custom_css.imports": [
    "file:///Users/philipp/dev/dotfiles/vscode-custom-css.css"
  ],
  "vscode_custom_css.policy": true,
  "vscode_custom_css.statusbar": true,
  "cSpell.showStatus": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "github.hosts": [
    {
      "host": "https://github.com",
      "token": "system"
    }
  ],
  "breadcrumbs.enabled": true,
  "workbench.startupEditor": "welcomePage",
  "editor.formatOnSave": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Night Owl (No Italics)",
  "security.workspace.trust.untrustedFiles": "open",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // How many spaces do you wish the indentation was? The extension will *try* to match this.
  "stretchySpaces.targetIndentation": 2,

  // For which languages Stretchy Spaces should be activated (if empty it means all).
  "stretchySpaces.includedLanguages": ["typescript"], // for example ["nim", "nims", "python"]

  // For which languages Stretchy Spaces should be deactivated (if empty it means none).
  "stretchySpaces.excludedLanguages": [],
  "stretchySpaces.updateDelay": 10,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.zoomLevel": 1,
  "sourcegraph.accessToken": "70cf894f2525cc3255a7e9d6c90c5e89034495be" // for example ["plaintext"]
}
