[user]
	name = Philipp Spiess
	email = hello@philippspiess.com
[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait --new-window
[alias]
	ir = rebase -i origin/master --autosquash --gpg-sign=hello@philippspiess.com
	c = commit
[commit]
[gpg]
	program = /usr/local/bin/gpg
[commit]
	gpgsign = false
[pull]
	rebase = false
[merge]
	conflictstyle = diff3
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
